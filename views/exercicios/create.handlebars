<div class="flex">
    {{> navbar }}
    <div class="Container">
        <h1>Criar Exercício</h1>
        <form action="/exercicio" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" required name="nome" class="form-control" placeholder="Digite o nome do exercício">
                <div class="form-group">
                    <label for="descricao">Descrição</label>
                    <textarea required class="form-control" placeholder="Descreva o exercício" name="descricao" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label for="">Imagem do exercício</label>
                    <input type="file" name="imagem"  accept="image/*" class="form-control-file" id="">
                </div>
                <input type="submit" class="btn btn-dark" value="Salvar">
            </div>
        </form>
    </div>
</div>