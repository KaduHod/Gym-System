<div class="flex">
    {{> navbar }}
    <div class="Container">
        <h1>Editar Exercício</h1>
        <form action="/exercicio/edit/{{exercicio.id}}" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="nome">Nome </label>
                <input type="text" required name="nome" class="form-control" placeholder="Digite o nome do exercício" value="{{exercicio.nome}}">
                <div class="form-group">
                    <label for="descricao">Descrição </label>
                    <textarea required class="form-control" placeholder="Descreva o exercício" name="descricao" rows="3" value="{{exercicio.descricao}}">{{exercicio.descricao}}</textarea>
                </div>
                <div class="form-group" style="margin-top: 5px;">
                    {{#unless exercicio.imagem }}
                    <label for="">Imagem do exercício</label>
                    {{/unless}}
                    {{#if exercicio.imagem }}
                    <label for="">Trocar imagem do exercício</label>
                    {{/if}}
                    <input type="file" capture name="imagem"  accept="image/*" class="form-control-file" id="">
                </div>
                <input type="submit" class="btn btn-dark" value="Salvar">
            </div>
        </form>

        <div class="previewImage bordaBonita">
            <img class="bordaBonita" src="/storage/exercicios/{{exercicio.imagem}}" alt="Imagem do exercício">
        </div>
    </div>
</div>